<Window x:Class="CaliburnExample.Views.Main.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CaliburnExample.Views.Main"
        mc:Ignorable="d"
        Title="MainView" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="10" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button Grid.Row="0" Grid.Column="0" Content="První pohled" />
        <Button Grid.Row="0" Grid.Column="2" Content="Druhý pohled" />

        <!-- x:Name směřuje na Property ActiveItem ve view modelu MainViewModel (ActiveItem je Property předka třídy Conductor<T>.Collection.OneActive -->
        <ContentControl x:Name="ActiveItem" /> <!-- ContentControl zobrazí pohled, který odpovídá view modelu, který je nastaven v ActiveItem -->
    </Grid>
</Window>
